<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.UsersDao">
	<insert id="insertUser">
		<!-- ignore 主键冲突，报错/ Primary key conflict, error report-->
		INSERT INTO users()
		VALUES (#{user_id}, #{user_name}, #{user_pwd}, NOW())
	</insert>
	
	<select id="getAllUsers" resultType="Users">
		<!-- get all user names and their registration date -->
		SELECT
			user_name
		FROM
			ssmdb.users
	</select>
</mapper>