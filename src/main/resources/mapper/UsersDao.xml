<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.UsersDao">
	<resultMap type="Users" id="userMap">
		<id property="id" column="user_id" />
		<result property="name" column="user_name" />
		<result property="pwd" column="user_pwd" />
		<result property="date" column="regist_date" />
	</resultMap>
	<insert id="insertUser">
		<!-- ignore 主键冲突，报错/ Primary key conflict, error report-->
		INSERT INTO users()
		VALUES (#{user_id}, #{user_name}, #{user_pwd}, NOW())
	</insert>
	
	<select id="queryAll" resultType="String">
		<!-- get all user names and their registration date -->
		SELECT user_name
		FROM ssmdb.users
	</select>
	
	<select id="selectUser" parameterType="String" resultMap="userMap">
		<!-- get a user's full detail -->
		SELECT *
		FROM ssmdb.users
		WHERE user_name = #{user_name}
	</select>
</mapper>